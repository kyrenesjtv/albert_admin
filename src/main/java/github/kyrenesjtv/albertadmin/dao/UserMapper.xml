<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="github.kyrenesjtv.albertadmin.dao.UserMapper">

    <select id="getUserByName" resultType="github.kyrenesjtv.albertadmin.entity.po.UserPO">
        select user_name as loginName , user_pwd as password , id
        from mon_user_info
        where user_name = #{name}
    </select>

</mapper>